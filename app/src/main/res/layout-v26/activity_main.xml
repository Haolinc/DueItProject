<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/QuickNoteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/functionLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25">

        <TextView
            android:id="@+id/duedate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Due date"
            android:textSize="30sp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dueDate_scrollview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Reminder"
            android:textSize="30sp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25" />

        <ScrollView
            android:id="@+id/dueDate_scrollview"
            android:layout_width="290dp"
            android:layout_height="200dp"
            android:layout_below="@+id/duedate_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/scrollview_stroke"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25">

            <LinearLayout
                android:id="@+id/dueDate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.25">

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/reminder_scrollview"
            android:layout_width="290dp"
            android:layout_height="200dp"
            android:layout_below="@+id/reminder_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@drawable/scrollview_stroke"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reminder_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/functionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonToTestMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:onClick="jumpToTestMain"
            android:text="test"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/buttonToMemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/buttonToTestMain"
            android:onClick="jumpToMemo"
            android:text="Memo"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25" />


        <Button
            android:id="@+id/buttonToDailyRoutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/buttonToMemo"
            android:text="Drawer"
            android:textSize="8sp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/buttonToSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@id/buttonToDailyRoutine"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:onClick="jumpToTP"
            android:text="Schedule Test"
            android:textSize="8sp"

            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.25" />

    </RelativeLayout>

    <Button
        android:id="@+id/resetButtonInMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Reset Database"
        app:layout_constraintBottom_toTopOf="@+id/functionLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>